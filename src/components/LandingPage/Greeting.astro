---
import { Image } from "astro:assets";

import PhotoDiri from "../../assets/fotopribadi.jpg";

import SocialComponent from "../LandingPage/SocialMedia.astro";

import instagrampicture from "../../assets/social/instagram.png"
import LinkedlnPicture from "../../assets/social/linkedin.png"
import GithubPicture from "../../assets/social/github.png"

const socialLinks = [
  { href: "https://instagram.com/dffar.hn", imgSrc: instagrampicture, alt: "Twitter" },
  { href: "https://github.com/Dffarhn", imgSrc: GithubPicture, alt: "GitHub" },
  { href: "https://linkedin.com/in/dapdap", imgSrc: LinkedlnPicture, alt: "LinkedIn" },
];

---

<div class="laptop:h-screen laptop:items-center container-greeting laptop: w-auto  flex justify-between laptop:px-8 tablet:px-0 laptop:justify-items-center ">
  <div class="container-text px-4 py-6 mx-8 bg-blue-950 text-black laptop:h-fit laptop:px-14 laptop:py-6 laptop:w-2/4 ">
    <h3>
      <span>Hello Buds</span>
    </h3>

    <h2>
      <span>I am Muhammad Daffa Raihan</span>
    </h2>

    <h5>
      <span>Backend Engineer Enthusiast || Informatics Undergraduate at Universitas Islam Indonesia</span>
    </h5>

    <div class="container-button-text">
      <a href="src/assets/project/CV.pdf" download class="inline-flex items-center py-3 px-6 text-white bg-[#308dd4] rounded hover:bg-[#256ca1] transition duration-300 ease-in-out">
        Download CV
        <svg class="ml-2 text-white" width="30" height="25" xmlns="http://www.w3.org/2000/svg" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd">
          <path d="M22 24h-20v-24h14l6 6v18zm-7-23h-12v22h18v-16h-6v-6zm3 15v1h-12v-1h12zm0-3v1h-12v-1h12zm0-3v1h-12v-1h12zm-2-4h4.586l-4.586-4.586v4.586z"/>
        </svg>
      </a>
    </div>
    
    
  </div>
  <div class="container-image">
    <Image class="image-flip" src={PhotoDiri} alt="A description of my image."  />

    <SocialComponent Social={socialLinks} />
  </div>
</div>


