---
import { Image } from "astro:assets";

const { Social } = Astro.props;
---

<div class="social-container flex flex-col items-center w-full bg-white p-4 rounded-lg shadow-md laptop:w-3/6 laptop:p-6">
  <span class="text-gray-800 text-xl font-semibold mb-4">Connect with me</span>
  <ul class="social-list flex gap-8 mt-2 justify-center">
    {
      Social.map((social: { href: string; imgSrc: any; alt: string }) => (
        <li class="social-item">
          <a href={social.href} target="_blank" rel="noopener noreferrer" class="group">
            <Image 
              src={social.imgSrc} 
              alt={social.alt as string} 
              class="social-icon w-16 laptop:w-14 transition-transform transform hover:scale-110 duration-200 ease-in-out group-hover:shadow-lg"
            />
          </a>
        </li>
      ))
    }
  </ul>
</div>


